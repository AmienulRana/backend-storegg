<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<%- include('../../partials/sidebar.ejs') %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href='/category'>Nominal</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Tambah Nominal</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form action="/nominal/create" method="post">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="hame_game">Nama game</label>
                        <input type="text" name="nameGame" class="form-control" placeholder="Masukan jumlah coin" >
                      </div>
                      <div class="form-group">
                        <label>Nama Koin</label>
                        <select class="form-control select2" style="width: 100%;" name="coinName">
                          <option selected="selected">Pilih Koin</option>
                          <option value="gold">Gold</option>
                          <option value='diamond'>Diamond</option>
                          <option value="jewel">Jewel</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="coin">Jumlah Koin</label>
                        <input type="number" name="coinQuantity" class="form-control" placeholder="Masukan jumlah coin" >
                      </div>
                      <div class="form-group">
                        <label for="harga">Harga</label>
                        <input type="number" name="harga" class="form-control" placeholder="Masukan harga" >
                      </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                  </form>
                </div>
                <!-- /.card -->

              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include('../../partials/footer.ejs') %>
<%- include('../../partials/js.ejs') %>
