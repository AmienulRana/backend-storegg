<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<%- include('../../partials/sidebar.ejs') %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Payment</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href='/category'>Payment</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Tambah Payment</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form action="/payment/edit/<%=payment._id%>/?_method=PUT" method="post">
                    <div class="card-body">
                      <div class="form-group">
                        <label>Tipe Pembayaran</label>
                        <input type="text" value="<%=payment.tipePembayaran %>" name="tipePembayaran" class="form-control" required>
                      </div>
                      <div class="form-group">
                        <label>Bank</label>
                          <select class="form-control select2" multiple="multiple" style="width: 100%;" name="nominals">
                            <%banks.forEach(bank => { %>
                              <option value="<%=bank._id%>"
                                 <% payment.bank.forEach(b => { %>
                                   <%if(bank._id.toString() == b._id.toString()) { %>
                                     selected
                                 <% }})%>
                                ><%=bank.namaPemilik%>-<%=bank.namaBank%></option>
                            <% }) %>
                          </select>
                      </div>

                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                  </form>
                </div>
                <!-- /.card -->

              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include('../../partials/footer.ejs') %>
<%- include('../../partials/js.ejs') %>
